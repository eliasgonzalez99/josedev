---
interface Project {
  index: number;
  badge: string;
  title: string;
  meta: string;
  desc: string;
  label: string;
  stack: string[];
  link?: string;
}

const projects: Project[] = [
  {
    index: 0,
    badge: 'Backend',
    title: 'PayStream Gateway',
    meta: 'Go · gRPC · Kafka · 2023',
    desc: 'Gateway de pagos tolerante a fallos con patrón saga para transacciones distribuidas. Soporta 15k TPS con latencia p99 < 40ms.',
    label: 'Payments Gateway',
    stack: ['Go', 'gRPC', 'Kafka', 'PostgreSQL', 'Redis'],
    link: 'https://github.com',
  },
  {
    index: 1,
    badge: 'Infra',
    title: 'ObservaKit',
    meta: 'OpenTelemetry · Prometheus · 2023',
    desc: 'Librería open-source de observabilidad para servicios Go. Instrumentación automática de métricas, trazas y logs con un solo decorator.',
    label: 'Observability SDK',
    stack: ['Go', 'OpenTelemetry', 'Prometheus', 'Grafana'],
    link: 'https://github.com',
  },
  {
    index: 2,
    badge: 'Data',
    title: 'ScorePipeline',
    meta: 'Python · Airflow · dbt · 2022',
    desc: 'Pipeline de scoring crediticio con más de 200 features derivadas de fuentes externas. Procesa 50k expedientes/día con linaje de datos completo.',
    label: 'Credit Scoring',
    stack: ['Python', 'Airflow', 'dbt', 'Snowflake', 'Spark'],
    link: 'https://github.com',
  },
  {
    index: 3,
    badge: 'Full-stack',
    title: 'FleetTrack',
    meta: 'TypeScript · Next.js · 2021',
    desc: 'Dashboard en tiempo real para seguimiento de flotillas con WebSockets y mapas interactivos. Onboarding de 30 empresas de logística.',
    label: 'Fleet Dashboard',
    stack: ['TypeScript', 'Next.js', 'Supabase', 'Mapbox'],
    link: 'https://github.com',
  },
  {
    index: 4,
    badge: 'CLI',
    title: 'dbshift',
    meta: 'Go · Open Source · 2022',
    desc: 'Herramienta CLI para migraciones de base de datos con soporte multi-dialecto (Postgres, MySQL, SQLite). 600+ GitHub stars.',
    label: 'DB Migrations CLI',
    stack: ['Go', 'PostgreSQL', 'MySQL', 'SQLite'],
    link: 'https://github.com',
  },
];
---

<section class="projects-section" id="proyectos">
  <div class="wrap">
    <div class="s-label reveal">Proyectos destacados</div>

    <div class="projects-layout">

      <!-- ── CARD VIEWER ── -->
      <div class="card-viewer reveal reveal-delay-1" id="card-viewer">

        {projects.map(p => (
          <div class={`project-card ${p.index === 0 ? 'active' : ''}`} data-index={p.index}>
            <div class="card-preview">
              <span class="card-badge">{p.badge}</span>

              <div class="terminal">
                <div class="terminal-bar">
                  <span class="dot red"></span>
                  <span class="dot yellow"></span>
                  <span class="dot green"></span>
                  <span class="terminal-title mono">{p.title.toLowerCase().replace(' ', '-')}</span>
                </div>
                <div class="terminal-body">
                  <div class="t-line"><span class="t-prompt">$</span> <span class="t-cmd">git log --oneline -5</span></div>
                  <div class="t-line t-out">a3f1b2c feat: add circuit breaker pattern</div>
                  <div class="t-line t-out">7d8e9a1 fix: handle timeout edge case</div>
                  <div class="t-line t-out">c4b5d6e refactor: extract retry logic</div>
                  <div class="t-line t-out">1e2f3a4 test: add integration tests</div>
                  <div class="t-line t-out">9b0c1d2 chore: update dependencies</div>
                  <div class="t-line"><span class="t-prompt">$</span> <span class="t-cmd">make test</span></div>
                  <div class="t-line t-out t-success">✓ All tests passed (142/142)</div>
                  <div class="t-line"><span class="t-prompt">$</span> <span class="t-cursor">█</span></div>
                </div>
              </div>
            </div>

            <div class="card-footer">
              <div class="card-title">{p.title}</div>
              <div class="card-meta">{p.meta}</div>
            </div>
          </div>
        ))}

        <button class="zone zone-prev" id="zone-prev" aria-label="Proyecto anterior"></button>
        <button class="zone zone-next" id="zone-next" aria-label="Proyecto siguiente"></button>

        <div class="card-progress">
          <div class="card-progress-fill" id="progress-fill" style="width:20%"></div>
        </div>

        <!-- Arrow hints -->
        <div class="arrow-hint arrow-left" id="arrow-left" aria-hidden="true">‹</div>
        <div class="arrow-hint arrow-right" id="arrow-right" aria-hidden="true">›</div>
      </div>

      <!-- ── INFO PANEL ── -->
      <div class="projects-info reveal reveal-delay-2">
        <h2 class="info-heading">Proyectos<br /><em>seleccionados</em></h2>
        <p class="info-body">
          Una selección de sistemas construidos en producción y proyectos
          open-source. Cada uno refleja decisiones de diseño reales, trade-offs
          y aprendizajes técnicos concretos.
        </p>

        <ul class="project-index" id="project-index">
          {projects.map(p => (
            <li class={`project-index-item ${p.index === 0 ? 'active' : ''}`} data-goto={p.index}>
              <span class="idx-num mono">0{p.index + 1}</span>
              <span class={`idx-dot ${p.index === 0 ? 'active' : ''}`}></span>
              <span class="idx-label">{p.label}</span>
              <span class="idx-type mono">{p.badge}</span>
            </li>
          ))}
        </ul>

        <div class="project-detail" id="project-detail">
          {projects.map(p => (
            <div class={`detail-panel ${p.index === 0 ? 'active' : ''}`} data-for={p.index}>
              <p class="detail-desc">{p.desc}</p>
              <div class="detail-stack">
                {p.stack.map(s => <span class="tag">{s}</span>)}
              </div>
              {p.link && (
                <a href={p.link} target="_blank" rel="noopener noreferrer" class="detail-link mono">
                  Ver en GitHub ↗
                </a>
              )}
            </div>
          ))}
        </div>

        <div class="nav-hint">
          <button class="nav-hint-btn" id="btn-prev" disabled>← Anterior</button>
          <span class="page-counter mono" id="page-counter">01 / 05</span>
          <button class="nav-hint-btn" id="btn-next">Siguiente →</button>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  .projects-section {
    padding: 7rem 0;
    background: var(--surface2);
    position: relative;
    overflow: hidden;
  }
  .projects-section::before {
    content: '';
    position: absolute;
    bottom: -30%;
    right: -10%;
    width: 50vw;
    height: 50vw;
    background: radial-gradient(ellipse, var(--accent-glow2) 0%, transparent 65%);
    pointer-events: none;
  }

  .projects-layout {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 4rem;
    align-items: start;
    margin-top: 2rem;
  }

  /* ── Card viewer ── */
  .card-viewer {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: #0c0e0d;
    aspect-ratio: 4/5;
    border: 1px solid var(--subtle);
    max-height: 580px;
    cursor: pointer;
  }

  .project-card {
    position: absolute;
    inset: 0;
    display: none;
    flex-direction: column;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .project-card.active {
    display: flex;
    opacity: 1;
  }

  /* ── Terminal ── */
  .card-preview {
    flex: 1;
    position: relative;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #090b0a;
  }

  .card-badge {
    position: absolute;
    top: 1rem; left: 1rem;
    font-family: var(--mono);
    font-size: 0.52rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    padding: 0.28rem 0.6rem;
    background: var(--accent-glow);
    color: var(--accent);
    border: 1px solid var(--accent-dim);
    border-radius: var(--r);
  }

  .terminal {
    width: 100%;
    max-width: 420px;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--subtle);
    font-family: var(--mono);
    box-shadow: 0 16px 40px rgba(0,0,0,0.4);
  }

  .terminal-bar {
    background: #1c1e1d;
    padding: 0.6rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    border-bottom: 1px solid var(--subtle);
  }

  .dot { width: 10px; height: 10px; border-radius: 50%; flex-shrink: 0; }
  .dot.red    { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green  { background: #28c840; }

  .terminal-title {
    margin-left: 0.5rem;
    font-size: 0.58rem;
    letter-spacing: 0.08em;
    color: var(--muted);
  }

  .terminal-body {
    background: #0c0e0b;
    padding: 1rem 1.25rem;
    font-size: 0.70rem;
    line-height: 1.85;
  }

  .t-line { display: flex; gap: 0.5rem; }
  .t-prompt { color: var(--accent); }
  .t-cmd { color: #e8e4dc; }
  .t-out { color: var(--muted); padding-left: 0.5rem; font-size: 0.63rem; }
  .t-success { color: #28c840; }
  .t-cursor {
    display: inline-block;
    animation: blink 1.1s step-end infinite;
    color: var(--accent);
  }
  @keyframes blink { 0%,100% { opacity:1 } 50% { opacity:0 } }

  /* ── Card footer ── */
  .card-footer {
    padding: 1.1rem 1.5rem;
    background: var(--surface);
    border-top: 1px solid var(--subtle);
    display: flex;
    align-items: baseline;
    justify-content: space-between;
  }

  .card-title {
    font-family: var(--serif);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text);
  }
  .card-meta {
    font-family: var(--mono);
    font-size: 0.60rem;
    letter-spacing: 0.08em;
    color: var(--muted);
  }

  /* ── Click zones ── */
  .zone {
    position: absolute;
    top: 0; bottom: 2.8rem;
    width: 50%;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 4;
  }
  .zone-prev { left: 0; }
  .zone-next { right: 0; }

  /* Arrow hints */
  .arrow-hint {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.5rem;
    color: rgba(255,255,255,0.15);
    pointer-events: none;
    z-index: 3;
    transition: color 0.2s, opacity 0.2s;
    font-family: var(--mono);
  }
  .arrow-left  { left: 0.75rem; }
  .arrow-right { right: 0.75rem; }
  .card-viewer:hover .arrow-hint { color: rgba(255,255,255,0.3); }

  /* ── Progress ── */
  .card-progress {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    height: 2px;
    background: var(--subtle);
    z-index: 5;
  }
  .card-progress-fill {
    height: 100%;
    background: var(--accent);
    transition: width 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 0 8px var(--accent-glow);
  }

  /* ── Info panel ── */
  .projects-info {
    padding: 0.5rem 0 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-heading {
    font-family: var(--serif);
    font-size: clamp(1.8rem, 2.5vw, 2.4rem);
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: 1.1;
    color: var(--text);
  }
  .info-heading em { font-style: italic; color: var(--accent); }

  .info-body {
    font-size: 0.9rem;
    color: var(--text-2);
    line-height: 1.85;
    max-width: 44ch;
    margin: 0;
  }

  /* ── Index ── */
  .project-index {
    list-style: none;
    display: flex;
    flex-direction: column;
    border-top: 1px solid var(--subtle);
  }

  .project-index-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.7rem 0;
    border-bottom: 1px solid var(--subtle);
    cursor: pointer;
    transition: padding-left var(--transition), background var(--transition);
    position: relative;
  }
  .project-index-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 0;
    background: var(--accent-glow2);
    transition: width var(--transition);
  }
  .project-index-item:hover { padding-left: 0.5rem; }
  .project-index-item:hover::before { width: 100%; }
  .project-index-item.active { padding-left: 0.25rem; }

  .project-index-item.active .idx-num,
  .project-index-item.active .idx-label { color: var(--text); }
  .project-index-item.active .idx-dot   { background: var(--accent); border-color: var(--accent); box-shadow: 0 0 6px var(--accent-glow); }

  .idx-num {
    font-size: 0.58rem;
    letter-spacing: 0.1em;
    color: var(--muted);
    min-width: 2rem;
  }
  .idx-dot {
    width: 5px; height: 5px;
    border: 1px solid var(--muted);
    border-radius: 0;
    flex-shrink: 0;
    transition: background var(--transition), border-color var(--transition), box-shadow var(--transition);
  }
  .idx-label { font-size: 0.82rem; color: var(--muted); flex: 1; }
  .idx-type {
    font-size: 0.53rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--muted);
  }

  /* ── Detail panel ── */
  .project-detail { position: relative; min-height: 100px; }

  .detail-panel {
    display: none;
    flex-direction: column;
    gap: 0.75rem;
    animation: fade-in 0.3s ease;
  }
  .detail-panel.active { display: flex; }

  @keyframes fade-in {
    from { opacity: 0; transform: translateY(8px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .detail-desc {
    font-size: 0.9rem;
    color: var(--text-2);
    line-height: 1.75;
  }
  .detail-stack { display: flex; flex-wrap: wrap; gap: 0.4rem; }

  .detail-link {
    font-size: 0.63rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--accent);
    transition: opacity var(--transition), letter-spacing var(--transition);
    margin-top: 0.25rem;
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }
  .detail-link:hover { opacity: 0.7; letter-spacing: 0.18em; }

  /* ── Nav ── */
  .nav-hint {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .nav-hint-btn {
    font-family: var(--mono);
    font-size: 0.58rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: var(--muted);
    background: none;
    border: 1px solid var(--subtle);
    padding: 0.55rem 0.9rem;
    cursor: pointer;
    transition: color var(--transition), border-color var(--transition), background var(--transition);
    border-radius: var(--r);
  }
  .nav-hint-btn:hover {
    color: var(--accent);
    border-color: var(--accent-dim);
    background: var(--accent-glow2);
  }
  .nav-hint-btn:disabled { opacity: 0.25; pointer-events: none; }

  .page-counter {
    font-size: 0.58rem;
    letter-spacing: 0.14em;
    color: var(--muted);
    flex: 1;
    text-align: center;
  }

  @media (max-width: 768px) {
    .projects-layout { grid-template-columns: 1fr; }
    .projects-info { padding: 2rem 0 0; }
    .card-viewer { max-height: 420px; }
  }
</style>

<script>
  const cards        = document.querySelectorAll<HTMLElement>('.project-card');
  const indexItems   = document.querySelectorAll<HTMLElement>('.project-index-item');
  const detailPanels = document.querySelectorAll<HTMLElement>('.detail-panel');
  const progressFill = document.getElementById('progress-fill') as HTMLElement;
  const pageCounter  = document.getElementById('page-counter') as HTMLElement;
  const btnPrev      = document.getElementById('btn-prev') as HTMLButtonElement;
  const btnNext      = document.getElementById('btn-next') as HTMLButtonElement;
  const zonePrev     = document.getElementById('zone-prev') as HTMLElement;
  const zoneNext     = document.getElementById('zone-next') as HTMLElement;
  const arrowLeft    = document.getElementById('arrow-left') as HTMLElement;
  const arrowRight   = document.getElementById('arrow-right') as HTMLElement;

  let current = 0;
  const total = cards.length;

  function goTo(n: number) {
    if (n < 0 || n >= total) return;

    // Fade out current
    cards[current].style.opacity = '0';
    setTimeout(() => { cards[current].classList.remove('active'); }, 200);

    indexItems[current].classList.remove('active');
    detailPanels[current].classList.remove('active');

    current = n;

    // Fade in new
    setTimeout(() => {
      cards[current].classList.add('active');
      cards[current].style.opacity = '';
    }, 220);

    indexItems[current].classList.add('active');
    detailPanels[current].classList.add('active');
    indexItems[current].scrollIntoView({ block: 'nearest', behavior: 'smooth' });

    progressFill.style.width = ((current + 1) / total * 100) + '%';
    const pad = (x: number) => String(x).padStart(2, '0');
    pageCounter.textContent  = `${pad(current + 1)} / ${pad(total)}`;
    btnPrev.disabled = current === 0;
    btnNext.disabled = current === total - 1;

    // Update arrow visibility
    if (arrowLeft)  arrowLeft.style.opacity  = current === 0       ? '0' : '';
    if (arrowRight) arrowRight.style.opacity = current === total-1 ? '0' : '';
  }

  zonePrev.addEventListener('click', () => goTo(current - 1));
  zoneNext.addEventListener('click', () => goTo(current + 1));
  btnPrev.addEventListener('click',  () => goTo(current - 1));
  btnNext.addEventListener('click',  () => goTo(current + 1));

  indexItems.forEach(item => {
    item.addEventListener('click', () => goTo(Number(item.dataset.goto)));
  });

  // Keyboard navigation
  document.addEventListener('keydown', e => {
    const viewer = document.getElementById('card-viewer');
    if (!viewer) return;
    const rect = viewer.getBoundingClientRect();
    const inView = rect.top < window.innerHeight && rect.bottom > 0;
    if (!inView) return;

    if (e.key === 'ArrowRight' || e.key === 'ArrowDown') goTo(current + 1);
    if (e.key === 'ArrowLeft'  || e.key === 'ArrowUp')   goTo(current - 1);
  });

  goTo(0);
</script>